
@{
    ViewBag.Title = "General Information";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Action("Notification")

<div class="container">
    <section class="content">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <i class="fa fa-briefcase"></i>&nbsp;General Information
            </div>
            <div class="panel-body">
                <form action="/jobapplication/generalinformation" method="post">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Initials</label>
                                <input type="text" name="" value="@ViewBag.initials" class="form-control" disabled />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>First Name</label>
                                <input type="text" name="" value="@ViewBag.firstName" class="form-control" disabled />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Middle Name</label>
                                <input type="text" name="" value="@ViewBag.middleName" class="form-control" disabled />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Last Name</label>
                                <input type="text" name="" value="@ViewBag.lastName" class="form-control" disabled />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>ID Number</label>
                                <input type="text" name="" value="@ViewBag.idNumber" class="form-control" disabled />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Date of Birth</label>
                                <input type="text" name="" value="@ViewBag.birthYear" class="form-control" disabled />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Email Address</label>
                                <input type="text" name="" value="@ViewBag.email" class="form-control" disabled />
                                <input type="text" name="EmailAddress" value="@ViewBag.email" class="form-control" style="display:none;" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Applicant Type</label>
                                <input type="text" name="" value="@ViewBag.applicantType" class="form-control" disabled />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Gender</label>
                                <input type="text" name="" value="@ViewBag.gender" class="form-control" disabled />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Marital Status</label>
                                <input type="text" name="" value="@ViewBag.maritalStatus" class="form-control" disabled />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Phone Number</label>
                                <input type="text" name="" value="@ViewBag.phone" class="form-control" disabled />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Citizenship</label>
                                <input type="text" name="" value="@ViewBag.citizenship" class="form-control" disabled />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Job Id</label>
                                <input type="text" name="" value="@ViewBag.jobId" class="form-control" disabled />
                                <input type="text" name="JobId" value="@ViewBag.jobId" class="form-control" style="display:none;" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Job Reference No</label>
                                <input type="text" name="" value="@ViewBag.jobRefNo" class="form-control" disabled />
                                <input type="text" name="JobRefNo" value="@ViewBag.jobRefNo" class="form-control" style="display:none;" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Job Title</label>
                                <input type="text" name="" value="@ViewBag.jobTitle" class="form-control" disabled />
                                <input type="text" name="JobTitle" value="@ViewBag.jobTitle" class="form-control" style="display:none;" />
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary pull-right"><i class="fa fa-paper-plane"></i>&nbsp;Next</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>