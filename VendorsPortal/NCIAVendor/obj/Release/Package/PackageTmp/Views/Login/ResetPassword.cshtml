@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/_Login.cshtml";
}

<form class="login-form" autocomplete="off" action="@Url.Action("resetpassword","login")" method="post">
    <p>Reset Password</p>
    <div class="form-group">
        <div class="input-icon">
            <input class="form-control placeholder-no-fix" type="password" autocomplete="off" id="new-password" placeholder="New Password" name="NewPassword" required />
        </div>
    </div>
    <div class="form-group">
        <div class="input-icon">
            <input class="form-control placeholder-no-fix" type="password" autocomplete="off" id="confirm-password" placeholder="Confirm Password" name="ConfirmPassword" required />
        </div>
    </div>
    <div class="form-actions">
        <button type="submit" class="btn green pull-right" onclick="return validatePassword()"><i class="icon-login"> Reset Password</i></button>
        <a href="@Url.Action("index", "login")" class="btn green pull-left"><i class="icon-arrow-left"> Back</i></a>
    </div>
    <br />
</form>

<script type="text/javascript">
    const newPassword = document.getElementById('new-password');
    const confirmPassword = document.getElementById('confirm-password');

    const validatePassword = function () {
        if (newPassword.value !== confirmPassword.value) {
            alert('Passwords do not match!');
            return false;
        } else {
            return true;
        }
    }
</script>