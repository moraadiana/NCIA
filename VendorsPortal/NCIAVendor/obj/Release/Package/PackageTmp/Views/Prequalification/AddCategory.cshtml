﻿@model NCIAVendor.Models.Categories
@{
    ViewBag.Title = "Add Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content">
    <!-- BEGIN PAGE HEADER-->
    <!-- BEGIN PAGE BAR -->
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <a href="@Url.Action("index", "dashboard")">Home</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <a href="#">Dashboard</a>
                <i class="fa fa-circle"></i>
            </li>
        </ul>
    </div>
    <!-- END PAGE BAR -->

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            <button class="close" data-close="alert"></button>
            <span> @ViewBag.Error </span>
        </div>
    }
    @if (ViewBag.Success != null)
    {
        <div class="alert alert-success">
            <button class="close" data-close="alert"></button>
            <span> @ViewBag.Success </span>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            <button class="close" data-close="alert"></button>
            <span>@TempData["Error"]</span>
        </div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            <button class="close" data-close="alert"></button>
            <span>@TempData["Success"]</span>
        </div>
    }
    <!-- BEGIN PAGE TITLE
    <h1 class="page-title">
        PCF CONTRIBUTION Portal
    </h1>
    <!-- END PAGE TITLE-->
    <!-- END PAGE HEADER-->
    <div class="portlet-body" id="divclasses">
        <!-- BEGIN FORM-->
        <form action="@Url.Action("submitcategorydocument","prequalification")" method="POST" role="form" enctype="multipart/form-data">
            <div class="form-body">
                <div class="row">
                    <div class="modal fade" id="basic" tabindex="-1" role="basic" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                                    <h4 class="modal-title">Attach Document</h4>
                                </div>
                                <div class="modal-body">
                                    <div class="form-group">
                                        <input type="hidden" id="code" name="Code" class="form-control" value="@ViewBag.Category">
                                    </div>
                                    <div class="form-group">
                                        <input type="hidden" id="docname" name="DocName" class="form-control">
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label">Attach Document</label>
                                        <input type="file" id="docfile" name="DocFile" class="form-control" accept="application/pdf" required>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn dark btn-outline" data-dismiss="modal">Close</button>
                                    <button type="submit" class="btn green">Upload</button>
                                </div>
                            </div>
                            <!-- /.modal-content -->
                        </div>
                        <!-- /.modal-dialog -->
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="row">
        <div class="col-md-12">
            <!-- BEGIN EXAMPLE TABLE PORTLET-->
            <div class="portlet light portlet-fit bordered">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="icon-settings font-red"></i>
                        <span class="caption-subject font-red sbold uppercase">Attach all the mandatory documents and submit</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="table-toolbar">
                    </div>
                    <table class="table table-striped table-hover table-bordered" id="sample_editable_1">
                        <thead>
                            <tr>
                                <th> Description </th>
                                <th> Mandatory </th>
                                <th> Attachment </th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.AllCategories != null && Model.AllCategories.Any())
                            {
                                foreach (var item in Model.AllCategories)
                                {
                                    <tr>
                                        <td>@item.Description</td>
                                        <td>@item.Mandatory</td>
                                        @if (item.Attached == "Yes")
                                        {
                                            <td><a onclick="editEmail(this);" class="btn green btn-outline sbold" data-toggle="modal" href="#basic"><i class="fa fa-pen"></i><span class="text-info"> Edit</span></a></td>
                                        }
                                        else
                                        {
                                            <td><a onclick="editEmail(this);" class="btn green btn-outline sbold" data-toggle="modal" href="#basic"><i class="fa fa-file"></i><span class="text-info"> Attach</span></a></td>
                                        }
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <form action="@Url.Action("submitcategory", "prequalification")" method="post" role="form">
                <div class="form-body">

                    <div class="form-group">
                        <input type="hidden" id="code" name="Code" class="form-control" value="@ViewBag.Category">
                    </div>
                    <div class="form-group" style="text-align:right">
                        @*<button type="button" id="btnback" class="btn blue"> Back</button>*@
                        <button type="submit" class="btn blue">Submit</button>
                        @*<a href="@Url.Action("SubmitApplication", "Dashboard")" class="btn blue"  style="width:80px;height:40px"></a>*@
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="../assets/global/plugins/jquery.min.js" type="text/javascript"></script>
<script type="text/javascript">
    function editEmail(button) {
        var row = $(button).closest("TR");
        $('#docname').val($("TD", row).eq(0).html());
    }
</script>