@model NCIASupplier.Models.BidderDetails
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link href="../assets/global/plugins/bootstrap-fileinput/bootstrap-fileinput.css" rel="stylesheet" type="text/css" />
    <link href="../assets/pages/css/profile.min.css" rel="stylesheet" type="text/css" />
    <script src="../assets/global/plugins/jquery.min.js" type="text/javascript"></script>
    <script src="../assets/global/plugins/bootstrap-fileinput/bootstrap-fileinput.js" type="text/javascript"></script>
    <script src="../assets/pages/scripts/profile.min.js" type="text/javascript"></script>
    <script src="../assets/pages/scripts/form-samples.min.js" type="text/javascript"></script>
    <script src="../assets/pages/scripts/dashboard.min.js" type="text/javascript"></script>
}

<div class="page-content">
    <!-- BEGIN PAGE BAR -->
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <a href="@Url.Action("index", "dashboard")">Home</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <span>Dashboard</span>
            </li>
        </ul>
    </div>
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            <button class="close" data-close="alert"></button>
            <span> @ViewBag.Error </span>
        </div>
    }
    @if (ViewBag.Success != null)
    {
        <div class="alert alert-success" style="width:100%">
            <button class="close" data-close="alert"></button>
            <span> @ViewBag.Success</span>
        </div>
    }
    <!-- END PAGE BAR -->
    <!-- BEGIN PAGE TITLE-->
    <h1 class="page-title">
        Dashboard
    </h1>
    <div class="row">
        <div class="col-md-4">
            <div class="profile-sidebar">
                <!-- PORTLET MAIN -->
                <div class="portlet light profile-sidebar-portlet ">
                    <!-- SIDEBAR USERPIC -->
                    <div class="profile-userpic">
                        <img src="@Url.Content("~/Profiles/" + Session["BidderNo"] + ".png?"+ DateTime.Now.Ticks.ToString())" class="img-responsive" alt="@Model.CompanyName logo">
                    </div>
                    <!-- END SIDEBAR USERPIC -->
                    <!-- SIDEBAR USER TITLE -->
                    <div class="profile-usertitle">
                        <div class="profile-usertitle-name"> @Model.CompanyName </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <!-- BEGIN SAMPLE TABLE PORTLET-->
            <div class="portlet box green">
                <div class="portlet-title tabbable-line">
                    <div class="caption">
                        <i class="fa fa-user"></i>Welcome @Model.BidderNo
                    </div>

                    <div class="tools">
                        <a href="javascript:;" class="collapse"> </a>
                    </div>
                    <ul class="nav nav-tabs">
                        <li class="active">
                            <a href="#tab_1_1" data-toggle="tab">Company Info</a>
                        </li>
                        <li>
                            <a href="#tab_1_2" data-toggle="tab">Change Logo</a>
                        </li>
                    </ul>
                </div>
                <div class="portlet-body">
                    <div class="tab-content">
                        <!-- PERSONAL INFO TAB -->
                        <div class="tab-pane active" id="tab_1_1">
                            <div class="table-scrollable">
                                <table class="table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th> Company Information </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td> Company Name: </td>
                                            <td></td>
                                            <td> @Model.CompanyName </td>
                                            <td></td>
                                        </tr>
                                        <tr>
                                            <td> KRA Pin: </td>
                                            <td></td>
                                            <td> @Model.BidderNo</td>
                                            <td></td>
                                        </tr>
                                        <tr>
                                            <td> Company Email: </td>
                                            <td></td>
                                            <td> @Model.Email </td>
                                            <td></td>
                                        </tr>
                                        <tr>
                                            <td> Contact Person: </td>
                                            <td></td>
                                            <td> @Model.ContactPerson </td>
                                            <td></td>
                                        </tr>
                                        <tr>
                                            <td> Contact Person Email: </td>
                                            <td></td>
                                            <td> @Model.CompanyEmail </td>
                                            <td></td>
                                        </tr>
                                        <tr>
                                            <td> Contact Person Phone: </td>
                                            <td></td>
                                            <td> @Model.CompanyContact </td>
                                            <td></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="tab-pane" id="tab_1_2">
                            <form action="#" method="POST" , enctype="multipart/form-data" role="form">
                                @*Url.Action("#","dashboard")*@
                                <div class="form-group">
                                    <div class="fileinput fileinput-new" data-provides="fileinput">
                                        <div class="fileinput-new thumbnail" style="width: 200px; height: 150px;">
                                            <img src="@Url.Content("~/Profiles/" + Model.BidderNo + ".png?"+ DateTime.Now.Ticks.ToString())" alt="@Model.CompanyName logo" />
                                        </div>
                                        <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 200px; max-height: 150px;"> </div>
                                        <div>
                                            <span class="btn default btn-file">
                                                <span class="fileinput-new"> Select image </span>
                                                <span class="fileinput-exists"> Change </span>
                                                <input type="file" name="profilePic" required>
                                            </span>
                                            <a href="javascript:;" class="btn default fileinput-exists" data-dismiss="fileinput"> Remove </a>
                                        </div>
                                    </div>
                                </div>
                                <div class="margin-top-10">
                                    <button type="submit" class="btn green"> Submit </button>
                                    <a href="@Url.Action("index", "dashboard")" class="btn default"> Cancel </a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- END SAMPLE TABLE PORTLET-->
        </div>
    </div>
</div>
