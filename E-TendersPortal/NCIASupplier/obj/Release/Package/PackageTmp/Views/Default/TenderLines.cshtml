@model IEnumerable<NCIASupplier.Models.Tenders>
@{
    ViewBag.Title = "Tender Lines";
    Layout = "~/Views/Shared/_Site.cshtml";
}

<div class="col-md-10">
    <!-- BEGIN EXAMPLE TABLE PORTLET-->
    <div class="portlet light portlet-fit bordered">
        <div class="portlet-title">
            <div class="caption">
                <i class="icon-settings font-red"></i>
                <span class="caption-subject font-red sbold uppercase">Tender Lines</span>
            </div>
        </div>
        <div class="portlet-body">
            <div class="table-toolbar">
            </div>
            <table class="table table-striped table-hover table-bordered" id="sample_editable_1">
                <thead>
                    <tr>
                        <th> Item No </th>
                        <th> Description </th>
                        <th> Unit of Measure </th>
                        <th> Quantity </th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.No</td>
                                <td>@item.Description</td>
                                <td>@item.UnitofMeasure</td>
                                <td>@item.Quantity</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!-- END EXAMPLE TABLE PORTLET-->
    <div class="row">
        <div class="col-md-6">
            <a href="@Url.Action("index", "default")" class="btn btn-block yellow pull-left"> <i class="icon-arrow-left"> Back</i></a>
        </div>
        <div class="col-md-6">
            <a href="@Url.Action("index", "login")" class="btn btn-block blue pull-right"> <i class="icon-login"> Login To Apply</i></a>
        </div>
    </div>
</div>