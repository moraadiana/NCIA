@model NCIASupplier.Models.Categories
@{
    ViewBag.Title = "Prequalification Application";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content">
    <!-- BEGIN PAGE BAR -->
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <a href="@Url.Action("index", "dashboard")">Home</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <span>Dashboard</span>
            </li>
        </ul>
    </div>
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            <button class="close" data-close="alert"></button>
            <span> @ViewBag.Error </span>
        </div>
    }
    @if (ViewBag.Success != null)
    {
        <div class="alert alert-success" style="width:100%">
            <button class="close" data-close="alert"></button>
            <span> @ViewBag.Success</span>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            <button class="close" data-close="alert"></button>
            <span>@TempData["Error"]</span>
        </div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            <button class="close" data-close="alert"></button>
            <span>@TempData["Success"]</span>
        </div>
    }
    <!-- END PAGE BAR -->
    <!-- BEGIN PAGE TITLE-->
    <h1 class="page-title">
        Apply for Prequalification
    </h1>
    <!-- END PAGE TITLE-->
    <!-- END PAGE HEADER-->
    <div class="portlet-body">
        <!-- BEGIN FORM-->
        <div class="row">
            <div class="col-md-12">
                <div class="portlet light portlet-fit bordered">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="icon-settings font-red"></i>
                            <span class="caption-subject font-red sbold uppercase">Unselected Categories</span>
                        </div>
                    </div>
                    <div class="portlet-body">
                        <div class="table-toolbar">
                        </div>
                        <table class="table table-striped table-hover table-bordered" id="sample_editable_1">
                            <thead>
                                <tr>
                                    <th> Code </th>
                                    <th> Description </th>
                                    <th> Apply </th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.AllCategories.Any())
                                {
                                    foreach (var item in Model.AllCategories)
                                    {
                                        <tr>
                                            <td>@item.Code</td>
                                            <td>@item.Description</td>
                                            <td><a href="@Url.Action("addcategory", "prequalification", new { category = item.Code})"><i class="fa fa-plus"></i><span class="text-info"> Add</span></a></td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="portlet light portlet-fit bordered">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="icon-settings font-red"></i>
                            <span class="caption-subject font-red sbold uppercase">Selected Categories</span>
                        </div>
                    </div>
                    <div class="portlet-body">
                        <div class="table-toolbar">
                        </div>
                        <table class="table table-striped table-hover table-bordered" id="sample_editable_2">
                            <thead>
                                <tr>
                                    <th> Code </th>
                                    <th> Description </th>
                                    <th> Requirements </th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.AppliedCategories.Any())
                                {
                                    foreach (var item in Model.AppliedCategories)
                                    {
                                        <tr>
                                            <td>@item.Code</td>
                                            <td>@item.Description</td>
                                            <td><a href="@Url.Action("addcategory", "prequalification", new { category = item.Code})"><i class="fa fa-pen"></i><span class="text-info"> Edit</span></a></td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>

                    <form action="@Url.Action("submitapplication", "prequalification")" method="post">
                        <div class="form-body">
                            <div class="form-group" style="text-align:right">
                                <button type="submit" class="btn blue">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="../assets/global/plugins/jquery.min.js" type="text/javascript"></script>
<script type="text/javascript">
    function GetSelected() {
        //Reference the Table.
        var grid = document.getElementById("Table1");

        //Reference the CheckBoxes in Table.
        var checkBoxes = grid.getElementsByTagName("INPUT");
        var message = "";
        //Loop through the CheckBoxes.
        for (var i = 0; i < checkBoxes.length; i++) {
            if (checkBoxes[i].checked) {
                var row = checkBoxes[i].parentNode.parentNode;
                message += row.cells[0].innerHTML + "::";
            }
        }

        //Display selected Row data in Alert Box.
        $('#selected').val(message);
        if ($('#selected').val() == '') {
            alert('Select atleast one prequalification category!');
            return false;
        }
    }
</script>
