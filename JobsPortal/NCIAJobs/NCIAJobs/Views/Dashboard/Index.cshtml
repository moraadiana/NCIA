@model NCIAJobs.Models.Registration
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content">
    <!-- BEGIN PAGE BAR -->
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <a href="@Url.Action("index", "dashboard")">Home</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <span>Dashboard</span>
            </li>
        </ul>
    </div>
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            <button class="close" data-close="alert"></button>
            @*<span> @TempData["Error"] </span>*@
            <span>@(TempData["Error"] as string)</span>
        </div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success" style="width:100%">
            <button class="close" data-close="alert"></button>
            <span> @TempData["Success"]</span>
        </div>
    }
    <!-- END PAGE BAR -->
    <!-- BEGIN PAGE TITLE-->
    <h1 class="page-title">
        Dashboard
    </h1>
    <!-- END PAGE TITLE-->
    <!-- END PAGE HEADER-->
    <div class="row">
        <div class="col-md-4">
            <div class="profile-sidebar">
                <!-- PORTLET MAIN -->
                <div class="portlet light profile-sidebar-portlet ">
                    <!-- SIDEBAR USERPIC -->
                    <div class="profile-userpic">
                        @*<img src="@Url.Content("~/Profiles/" + Session["username"] + ".png")" class="img-responsive" alt="">*@
                        @if (Session["gender"].ToString() == "Male")
                        {
                            <img src="@Url.Content("~/images/profile_m.png")" class="img-responsive" alt="@Session["name"]">
                        }
                        else
                        {
                            <img src="@Url.Content("~/images/profile_f.png")" class="img-responsive" alt="@Session["name"]">
                        }
                    </div>
                    <!-- END SIDEBAR USERPIC -->
                    <!-- SIDEBAR USER TITLE -->
                    <div class="profile-usertitle mt-3">
                        <h4 class="profile-usertitle-name text-center"> @Session["name"] </h4>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <!-- BEGIN SAMPLE TABLE PORTLET-->
            <div class="portlet box green">
                <div class="portlet-title tabbable-line">
                    <div class="caption">
                        <i class="fa fa-user"></i>Welcome @Session["name"]
                    </div>

                    <div class="tools">
                        <a href="javascript:;" class="collapse"> </a>
                    </div>
                    <ul class="nav nav-tabs">
                        <li class="active">
                            <a href="#tab_1_1" data-toggle="tab">Personal Info</a>
                        </li>
                        <li>
                            <a href="#tab_1_2" data-toggle="tab">Change Avatar</a>
                        </li>
                    </ul>
                </div>
                @*<div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-user"></i>Welcome @ViewBag.Name
                        </div>
                        <div class="tools">
                            <a href="javascript:;" class="collapse"> </a>
                        </div>
                    </div>*@
                <div class="portlet-body">
                    <div class="tab-content">
                        <!-- PERSONAL INFO TAB -->
                        <div class="tab-pane active" id="tab_1_1">
                            <div class="table-scrollable">
                                <table class="table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th> Personal Information </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td> First Name: </td>
                                            <td></td>
                                            <td>@Model.FirstName</td>
                                            <td></td>
                                        </tr>
                                        <tr>
                                            <td> Middle Name: </td>
                                            <td></td>
                                            <td>@Model.MiddleName</td>
                                            <td></td>
                                        </tr>
                                        <tr>
                                            <td> Last Name: </td>
                                            <td></td>
                                            <td>@Model.LastName</td>
                                            <td></td>
                                        </tr>
                                        <tr>
                                            <td> ID Number: </td>
                                            <td></td>
                                            <td>@Model.IdNumber</td>
                                            <td></td>
                                        </tr>
                                        <tr>
                                            <td> Email: </td>
                                            <td></td>
                                            <td>@Model.EmailAddress</td>
                                            <td></td>
                                        </tr>
                                        <tr>
                                            <td> Phone No: </td>
                                            <td></td>
                                            <td>@Model.MobileNo</td>
                                            <td></td>
                                        </tr>
                                        <tr>
                                            <td> Postal Address: </td>
                                            <td></td>
                                            <td>@Model.PostalAddress</td>
                                            <td></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="tab-pane" id="tab_1_2">
                            <form action="@Url.Action("ChangeProfilePic","Dashboard")" method="POST" , enctype="multipart/form-data" role="form">
                                <div class="form-group">
                                    <div class="fileinput fileinput-new" data-provides="fileinput">
                                        <div class="fileinput-new thumbnail" style="width: 200px; height: 150px;">
                                            @*<img src="@Url.Content("~/Profiles/" + Session["username"] + ".png")" alt="" />*@
                                        </div>
                                        <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 200px; max-height: 150px;"> </div>
                                        <div>
                                            <span class="btn default btn-file">
                                                <span class="fileinput-new"> Select image </span>
                                                <span class="fileinput-exists"> Change </span>
                                                <input type="file" name="profilePic" required>
                                            </span>
                                            <a href="javascript:;" class="btn default fileinput-exists" data-dismiss="fileinput"> Remove </a>
                                        </div>
                                    </div>
                                </div>
                                <div class="margin-top-10">
                                    <button type="submit" class="btn green"> Submit </button>
                                    <a href="@Url.Action("profile", "Dashboard")" class="btn default"> Cancel </a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
